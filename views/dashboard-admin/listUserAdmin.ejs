<div class="table-responsive">
    <table id="example" class="table table-striped table-bordered dt-responsive nowrap">
      <thead>
        <tr>
          <th>Id</th>
          <th>Username</th>
          <th>Email</th>
          <th>Fullname</th>
          <th>Gender</th>
          <th>Create Date</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
  
  <script>
    var table = $("#example").DataTable({
      processing: true,
      serverSide: true,
      bLengthChange: false,
      paging: true,
      pageLength: 10,
      autoWidth: false,
      ajax: {
        url: "/admin/getListUserPaginate",
        type: "GET",
        dataType: "json"
      },
      columns: [
        {
          data: "_id",
          class: "text-center",
          visible: false,
          orderable: false,
          render: function(data, type, row) {
            return '<a href="#">' + row._id + "</a>";
          }
        },
        {
          data: "username",
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            return row.username;
          }
        },
        {
          data: "email",
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            return row.email;
          }
        },
        {
          data: "fullname",
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            return row.fullname;
          }
        },
        {
          data: "gender",
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            if(row.gender)
                return row.gender;
            else return 'None';
            
          }
        },
        {
          data: "createDate",
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            return moment(row.createDate).format(
              "hh:mm A (DD-MM-YYYY)"
            );
          }
        },
        {
          class: "text-center",
          orderable: false,
          render: function(data, type, row) {
            return (
              '<button class="btn btn-danger btn-delete" data-id="' +
              row._id +
              '">Delete</button>'
            );
          }
        }
      ]
    });
  
    $(document).on("click", "button.btn-delete", function(event) {
      const data = {
        tripId: $(this).attr("data-id")
      };
      $.ajax({
        type: "POST",
        url: "/dashboard/removeTrip",
        data: data
      })
        .done(res => {
          table.ajax.reload();
        })
        .catch(err => {});
    });
  </script>
  