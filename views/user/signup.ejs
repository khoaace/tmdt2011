<div class="d-flex justify-content-center" style="margin: 2em;">
  <div class="login-panel panel panel-default">
    <div class="panel-heading"><h3 class="panel-title">Sign Up</h3></div>
    <div class="panel-body">
      <form role="form" method="POST" action="/signup">
        <fieldset>
          <div class="form-group">
                <label for="sel1">Tên tài khoản:</label>
            <input
              class="form-control"
              placeholder="Username"
              name="username"
              type="username"
              autofocus=""
              required
            />
          </div>

          <div class="form-group">
                <label for="sel1">Mật khẩu:</label>
            <input
              class="form-control"
              placeholder="Password"
              name="password"
              type="password"
              value=""
              required
            />
          </div>

          <div class="form-group">
                <label for="sel1">Nhập lại mật khẩu:</label>
            <input
              class="form-control"
              placeholder="Re-Password"
              name="repassword"
              type="password"
              value=""
              required
            />
          </div>

          <div class="form-group">
                <label for="sel1">Nhập email:</label>
            <input
              class="form-control"
              placeholder="Email"
              name="email"
              type="email"
              value=""
              required
            />
          </div>

          
          <div class="form-group">
                <label for="sel1">Nhập tên đầy đủ:</label>
            <input
              class="form-control"
              name="fullname"
              type="text"
              value=""
              required
            />
          </div>

          <div class="form-group">
              <label for="sel1">Chọn giới tính:</label>
              <select name="gender" class="custom-select" id="gender">
                  <option value="Nam" selected>Nam</option>
                  <option value="Nữ" >Nữ</option>
              </select>
        </div>

          <div class="form-group">
            <label for="sel1">Chọn loại tài khoản:</label>
            <select class="form-control" id="typeOfAccount"  name="typeOfAccount" onchange="toggleAccount();">
              <option value="customer">Khách hàng</option>
              <option value="agency">Nhà Xe</option>
            </select>
          </div> 

          <div class="form-group" id="agencyName" style="display: none;">
                <label for="sel1">Nhập tên nhà xe:</label>
            <input
              class="form-control"
              id="agencyName"
              name="agencyName"
              type="text"
              value=""
            />
          </div>

          <div class="form-group" id="agencyAdress" style="display: none;">
                <label for="sel1">Nhập địa chỉ nhà xe:</label>
            <input
              class="form-control"
              id="agencyAdress"
              name="agencyAdress"
              type="text"
              value=""
            />
          </div>

          <div class="form-group" id="agencyPhoneNumber" style="display: none;">
                <label for="sel1">Nhập số điện thoại nhà xe:</label>
            <input
              class="form-control"
              id="agencyPhoneNumber"
              name="agencyPhoneNumber"
              type="text"
              value=""
            />
          </div>

          <div class="form-group" id="agencyDiscription" style="display: none;">
                <label for="sel1">Nhập mô tả nhà xe:</label>
            <textarea
              class="form-control"
              id="agencyDiscription"
              name="agencyDiscription"
              type="text"
              value=""
            ></textarea>
          </div>


          <!-- Change this to a button or input when using this as a form -->
          <button type="submit" class="btn btn-sm btn-success" style="width: 100%">Sign Up</button> 
          <% if (message.length !== 0) { %>
          <div class="alert alert-danger">
            <a href="#" class="close" data-dismiss="alert" aria-label="close"
              >&times;</a
            >
            <%= message %>
          </div>
          <% } %>
        </fieldset>
      </form>
    </div>
  </div>
</div>
